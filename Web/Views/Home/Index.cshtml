<section class="swiper-container loading">
    <div class="swiper-wrapper">
        @{
            foreach (var swiper in Model.HomeSwipers)
            {
                <div class="swiper-slide"
                 style="background-image: url('/assets/images/@swiper.PhotoName')">
                    <img src="/assets/images/@swiper.PhotoName" class="entity-img" />
                    <div class="content">
                        <p class="title"
                       data-swiper-parallax="-30%"
                       data-swiper-parallax-scale=".7">
                            @swiper.Title
                        </p>
                        <span class="caption" data-swiper-parallax="-20%">
                            @swiper.Description
                        </span>
                    </div>
                </div>
            }
        }
    </div>

    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev swiper-button-white"></div>
    <div class="swiper-button-next swiper-button-white"></div>
</section>

<section class="pb-5 pt-5" id="services">
    <div class="vision-container">
        <div class="row">
            @{
                foreach (var service in Model.OurServices)
                {
                    <div class="col-lg-3 col-sm-6 col-8 mx-auto">
                        <a class="services-small-item">
                            <div class="icon">
                                <i class="fa fa-@service.Icon" aria-hidden="true"></i>
                            </div>
                            <h5 class="services-title">@service.Title</h5>
                            <p>@service.Description</p>
                        </a>
                        <div class="item-bg"></div>
                    </div>
                }
            }
        </div>
    </div>
</section>

