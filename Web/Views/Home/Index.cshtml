<section class="brands">
    <div class="brands-slider">
        <div id="left">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
        </div>
        <div class="sliders_block">
            <ul>
                @{
                    foreach (var brand in Model.Brands)
                    {
                        <li>
                            <div class="brand-item">
                                <img class="brand__img"
                                 src="/assets/images/@brand.PhotoName" alt="" />
                                <p class="brand-name">@brand.Title</p>
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
        <div id="right">
            <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </div>
    </div>
</section>

<section class="special">

    <div class="carousel">
        <div class="carousel__nav">
            <span id="moveLeft" class="carousel__arrow">
                <svg class="carousel__icon"
                     width="24"
                     height="24"
                     viewBox="0 0 24 24">
                    <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"></path>
                </svg>
            </span>
            <span id="moveRight" class="carousel__arrow">
                <svg class="carousel__icon"
                     width="24"
                     height="24"
                     viewBox="0 0 24 24">
                    <path d="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"></path>
                </svg>
            </span>
        </div>
        @{
            foreach (var specialSlider in Model.SpecialSliders)
            {
                <div class="carousel-item carousel-item--@specialSlider.Order">
                    <div class="carousel-item__image" style="background:url(/assets/images/@specialSlider.PhotoName) !important;background-size:cover !important"></div>
                    <div class="carousel-item__info">
                        <div class="carousel-item__container">
                            <h1 class="carousel-item__title">@specialSlider.Title</h1>
                            <p class="carousel-item__description">
                                @Html.Raw(specialSlider.Description)
                            </p>
                            <a href="@specialSlider.ButtonLink" class="carousel-item__btn">See More</a>
                        </div>
                    </div>
                </div>
            }
        }

    </div>

</section>

<section class="best-selling">
    <div id="main-container">
        <h3>Best Selling</h3>
        <div id="container">
            <div id="best-selling-products" class="best-selling-items">
                @{
                    foreach (var product in Model.BestSellingProducts)
                    {
                        <div class="best-selling-item">
                            <div class="best-sell-img">
                                <a asp-action="details" asp-controller="product" asp-route-id="@product.Id">
                                    <img src="/assets/images/@product.MainPhoto" alt="" />
                                </a>
                            </div>
                            <div class="item-info">
                                <p title="@product.Title">
                                    <strong>@product.Brand.Title</strong>
                                    @product.Title
                                </p>
                                <span class="price">@product.Price$</span>
                            </div>
                            <i data-id="@product.Id" class="fa fa-heart wish-list product-heart"
                           aria-hidden="true"></i>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="load-more">
            <button id="more-btn">
                <div id="text">
                    <span>Load</span>
                    <span>more</span>
                </div>
                <div class="clone">
                    <span>Load</span>
                    <span>more</span>
                </div>
                <svg width="20px"
                     xmlns="http://www.w3.org/2000/svg"
                     class="h-6 w-6"
                     fill="none"
                     viewBox="0 0 24 24"
                     stroke="currentColor"
                     stroke-width="2">
                    <path stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
            </button>
        </div>
    </div>
</section>

@{
    if (Model.HomeSpecialDay != null)
    {
        <section class="special-day"
             style="background-image: url('/assets/images/@Model.HomeSpecialDay.PhotoName')">
            <div class="special-left">
                <time class="countdown"
                  date-time="@Model.HomeSpecialDay.Year.@Model.HomeSpecialDay.Month.@Model.HomeSpecialDay.Day @Model.HomeSpecialDay.Hour:@Model.HomeSpecialDay.Minute:00"
