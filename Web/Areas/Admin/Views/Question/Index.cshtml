@using Web.Areas.Admin.ViewModels.Question;
@model QuestionIndexVM;

@{
    ViewBag.Title = "Faq Dashboard";
}
<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Question Table</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active"><a href="#" class="breadcrumb-link">Faq</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Question </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <a asp-action="create" asp-controller="question" asp-area="admin" class="btn btn-sm btn-outline-success col-1 d-block mb-3">Create</a>
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Descripiton</th>
                                    <th>Category</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var question in Model.Questions)
                                    {
                                        <tr>
                                            <td>@question.Id</td>
                                            <td>@question.Title</td>
                                            <td>@Html.Raw(question.Description)</td>
                                            <td>@question.QuestionCategory.Title</td>
                                            <td>@question.CreatedAt</td>
                                            <td>
                                                @{
                                                    if (question.ModifiedAt.ToString() == "01.01.0001 00:00:00")
                                                    {
                                                        <p>Non Modified</p>
                                                    }
                                                    else
                                                    {
                                                        @question.ModifiedAt
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group ml-auto">
                                                    <form class="d-flex" asp-action="delete" asp-controller="question" asp-area="admin" asp-route-id="@question.Id">
                                                        @* <a class="btn btn-sm btn-outline-light">Info</a>*@
                                                        <a asp-action="update" asp-controller="question" asp-area="admin" asp-route-id="@question.Id" class="btn btn-sm btn-outline-light">Edit</a>
                                                        <button type="submit" class="btn btn-sm btn-outline-light ml-2">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Descripiton</th>
                                    <th>Category</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>