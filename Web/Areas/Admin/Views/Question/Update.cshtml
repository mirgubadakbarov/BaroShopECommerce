@using Web.Areas.Admin.ViewModels.Question;
@model QuestionUpdateVM;

@{
    ViewBag.Title = "Faq Dashboard";
}
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
            <h3 class="section-title">Question Update</h3>
        </div>
        <div class="card">
            <div class="card-body">
                <form asp-action="update" asp-controller="question" asp-area="admin" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Title" class="col-form-label"></label>
                        <input asp-for="@Model.Title" class="form-control">
                        <span asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description" class="col-form-label"></label>
                        <textarea asp-for="@Model.Description" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CategoryId" class="col-form-label"></label>
                        <select asp-for="@Model.CategoryId" asp-items="@Model.Categories" class="form-control"></select>
                        <span asp-validation-for="@Model.CategoryId"></span>
                    </div>
                    <button class="btn btn-sm btn-outline-success" type="submit">Submit</button>
                    <a asp-action="index" asp-controller="question" asp-area="admin" class="btn btn-sm btn-outline-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")

    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
    }