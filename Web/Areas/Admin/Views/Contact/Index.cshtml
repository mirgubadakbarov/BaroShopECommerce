@using Web.Areas.Admin.ViewModels.Contact;
@model ContactIndexVM;
@{
    ViewBag.Title = "Contact Dashboard";
}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Contact Info</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Contact Info</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        @{
                            if (Model == null)
                            {
                                <a asp-action="create" asp-controller="contact" asp-area="admin" class="btn btn-sm btn-outline-success col-1 d-block mb-3">Create</a>
                            }
                            else
                            {
                                <table class="table table-striped table-bordered first">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Address</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Create date</th>
                                            <th>Update date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@Model.Id</td>
                                            <td>@Model.Address</td>
                                            <td>@Model.Email</td>
                                            <td>@Model.MobileNumber</td>
                                            <td>@Model.CreatedAt</td>

                                            <td>
                                                @{
                                                    if (Model.ModifiedAt.ToString() == "01.01.0001 00:00:00")
                                                    {
                                                        <p>Non Modified</p>
                                                    }
                                                    else
                                                    {
                                                        @Model.ModifiedAt
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group ml-auto">
                                                    <form asp-action="delete" asp-controller="contact" asp-area="admin">
                                                        @* <a class="btn btn-sm btn-outline-light">Info</a>*@
                                                        <a asp-action="update" asp-controller="contact" asp-area="admin" class="btn btn-sm btn-outline-light">Edit</a>
                                                        <button type="submit" class="btn btn-sm btn-outline-light">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Address</th>
                                            <th>Email</th>
                                            <th>Phone Number</th>
                                            <th>Create date</th>
                                            <th>Update date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>