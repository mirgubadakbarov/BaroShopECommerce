@using Web.Areas.Admin.ViewModels.Product;
@model ProductIndexVM;
@{
    ViewBag.Title = "Product Dashboard";
}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Produtcs Table</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Components</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Product Tables</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <a asp-action="create" asp-controller="product" asp-area="admin" class="btn btn-sm btn-outline-success col-1 d-block mb-3">Create</a>
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Photo</th>
                                    <th>Brand</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td>@product.Title</td>
                                            <td>@product.Price</td>
                                            <td><img style="width:150px;height:120px;object-fit:cover" class="img img-thumbnail" src="/assets/images/@product.MainPhoto" /></td>
                                            <td>@product.Brand.Title</td>

                                            <td>@product.CreatedAt</td>
                                            <td>
                                                @{
                                                    if (product.ModifiedAt.ToString() == "01.01.0001 00:00:00")
                                                    {
                                                        <p>Non Modified</p>
                                                    }
                                                    else
                                                    {
                                                        @product.ModifiedAt
                                                    }
                                                }
                                            </td>
                                            <td style="width:240px">
                                                <div class="btn-group ml-auto">
                                                    <form asp-action="delete" asp-controller="product" asp-area="admin" asp-route-id="@product.Id" style="display:flex;flex-wrap: wrap;gap: 5px;text-align:center;align-items:center;justify-content: center;">
                                                        <div>
                                                            <a asp-action="addsize" asp-controller="product" asp-route-id="@product.Id" class="btn btn-sm btn-outline-light">Add Size</a>
                                                            <a asp-action="addcolor" asp-controller="product" asp-route-id="@product.Id" class="btn btn-sm btn-outline-light">Add Color</a>
                                                        </div>
                                                        <div>
                                                            <a asp-action="details" asp-controller="product" asp-area="admin" asp-route-id="@product.Id" class="btn btn-sm btn-outline-light">Info</a>
                                                            <a asp-action="update" asp-controller="product" asp-area="admin" asp-route-id="@product.Id" class="btn btn-sm btn-outline-light">Edit</a>
                                                            <button type="submit" class="btn btn-sm btn-outline-danger ">
                                                                <i class="far fa-trash-alt"></i>
                                                            </button>
                                                        </div>

                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Photo</th>
                                    <th>Brand</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>