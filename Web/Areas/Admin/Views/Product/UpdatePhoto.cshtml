@using Web.Areas.Admin.ViewModels.Product;
@model ProductPhotoUpdateVM;

@{
    ViewBag.Title = "Product Dashboard";
}
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
            <h3 class="section-title">Product Photo Update</h3>
        </div>
        <div class="card">
            <div class="card-body">
                <form asp-action="updatephoto" asp-controller="product" asp-route-id="@Model.Id" asp-area="admin" method="post">
                    <input asp-for="@Model.ProductId" type="hidden" />
                    <div class="form-group">
                        <label asp-for="@Model.Order" class="col-form-label"></label>
                        <input asp-for="@Model.Order" class="form-control">
                        <span asp-validation-for="@Model.Order"></span>
                    </div>
                    <button class="btn btn-sm btn-outline-success" type="submit">Submit</button>
                    <a asp-action="update" asp-controller="product" asp-route-id="@Model.ProductId" asp-area="admin" class="btn btn-sm btn-outline-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    }