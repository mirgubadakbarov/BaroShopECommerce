@using Web.Areas.Admin.ViewModels.HomeMainSlider;
@model HomeMainSliderCreateVM;

@{
    ViewBag.Title = "Home Dashboard";
}
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
            <h3 class="section-title">Home Main Slider</h3>
        </div>
        <div class="card">
            <div class="card-body">
                <form asp-action="create" asp-controller="homemainslider" asp-area="admin" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Title" class="col-form-label"></label>
                        <input asp-for="@Model.Title" class="form-control">
                        <span asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Subtitle" class="col-form-label"></label>
                        <input asp-for="@Model.Subtitle" class="form-control">
                        <span asp-validation-for="@Model.Subtitle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ButtonLink" class="col-form-label"></label>
                        <input asp-for="@Model.ButtonLink" class="form-control">
                        <span asp-validation-for="@Model.ButtonLink"></span>
                    </div>
                    <div class="custom-file mb-3">
                        <input asp-for="@Model.Photo" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile" asp-for="@Model.Photo"></label>
                        <span asp-validation-for="@Model.Photo"></span>
                    </div>
                    <button class="btn btn-sm btn-outline-success" type="submit">Submit</button>
                    <a asp-action="index" asp-controller="homemainslider" asp-area="admin" class="btn btn-sm btn-outline-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    }