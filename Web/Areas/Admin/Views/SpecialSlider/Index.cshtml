@using Web.Areas.Admin.ViewModels.SpecialSlider;
@model SpecialSliderIndexVM;
@{
    ViewBag.Title = "Special Slider Dashboard";
}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Home Special Slider Table</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Special Slider Tables</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <a asp-action="create" asp-controller="specialslider" asp-area="admin" class="btn btn-sm btn-outline-success col-1 d-block mb-3">Create</a>
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Photo</th>
                                    <th>Order</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var slider in Model.SpecialSliders)
                                    {
                                        <tr>
                                            <td>@slider.Id</td>
                                            <td>@slider.Title</td>
                                            <td>@Html.Raw(slider.Description)</td>

                                            <td><img style="width:150px;height:120px;object-fit:cover" class="img img-thumbnail" src="/assets/images/@slider.PhotoName" /></td>
                                            <td>@slider.Order</td>

                                            <td>@slider.CreatedAt</td>
                                            <td>
                                                @{
                                                    if (slider.ModifiedAt.ToString() == "01.01.0001 00:00:00")
                                                    {
                                                        <p>Non Modified</p>
                                                    }
                                                    else
                                                    {
                                                        @slider.ModifiedAt
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group ml-auto">
                                                    <form asp-action="delete" asp-controller="specialslider" asp-area="admin" asp-route-id="@slider.Id">
                                                        @* <a class="btn btn-sm btn-outline-light">Info</a>*@
                                                        <a asp-action="update" asp-controller="specialslider" asp-area="admin" asp-route-id="@slider.Id" class="btn btn-sm btn-outline-light">Edit</a>
                                                        <button type="submit" class="btn btn-sm btn-outline-light">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Photo</th>
                                    <th>Order</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>