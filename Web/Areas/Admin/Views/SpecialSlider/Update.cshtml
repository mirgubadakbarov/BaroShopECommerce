@using Web.Areas.Admin.ViewModels.SpecialSlider;
@model SpecialSliderUpdateVM;
@{
    ViewBag.Title = "Special Slider Dashboard";
}
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
            <h3 class="section-title">Home Main Slider</h3>
        </div>
        <div class="card">
            <div class="card-body">
                <form asp-action="update" asp-controller="specialslider" asp-area="admin" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Title" class="col-form-label"></label>
                        <input asp-for="@Model.Title" class="form-control">
                        <span style="color:red !important" asp-validation-for="@Model.Title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <textarea class="form-control" asp-for="@Model.Description" rows="3"></textarea>
                        <span style="color:red !important" asp-validation-for="@Model.Description"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.ButtonLink" class="col-form-label"></label>
                        <input asp-for="@Model.ButtonLink" class="form-control">
                        <span style="color:red !important" asp-validation-for="@Model.ButtonLink"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Order" class="col-form-label"></label>
                        <input asp-for="@Model.Order" class="form-control">
                        <span style="color:red !important" asp-validation-for="@Model.Order"></span>
                    </div>

                    <div class="custom-file mb-3">
                        <input asp-for="@Model.Photo" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile" asp-for="@Model.Photo"></label>
                        <span style="color:red !important" asp-validation-for="@Model.Photo"></span>
                    </div>

                    <button class="btn btn-sm btn-outline-success" type="submit">Update</button>
                    <a asp-action="index" asp-controller="specialslider" asp-area="admin" class="btn btn-sm btn-outline-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>

        }