@using Web.Areas.Admin.ViewModels.Service;
@model ServiceIndexVM;

@{
    ViewBag.Title = "About Dashboard";
}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Service Table</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">About</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Service Tables</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <a asp-action="create" asp-controller="service" asp-area="admin" class="btn btn-sm btn-outline-success col-1 d-block mb-3">Create</a>
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Photo</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var service in Model.Services)
                                    {
                                        <tr>
                                            <td>@service.Id</td>
                                            <td>@service.Title</td>
                                            <td style="width:35%">@Html.Raw(service.Description)</td>
                                            <td><img style="width:150px;height:150px;object-fit:fill" class="img img-thumbnail" src="/assets/images/@service.PhotoName" /></td>
                                            <td>@service.CreatedAt</td>
                                            <td>
                                                @{
                                                    if (service.ModifiedAt.ToString() == "01.01.0001 00:00:00")
                                                    {
                                                        <p>Non Modified</p>
                                                    }
                                                    else
                                                    {
                                                        @service.ModifiedAt
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group ml-auto">
                                                    <form class="d-flex" asp-action="delete" controller="testimonial" asp-area="admin" asp-route-id="@service.Id">
                                                        @* <a class="btn btn-sm btn-outline-light">Info</a>*@
                                                        <a asp-action="update" controller="testimonial" asp-area="admin" asp-route-id="@service.Id" class="btn btn-sm btn-outline-light">Edit</a>
                                                        <button type="submit" class="btn btn-sm btn-outline-light ml-2">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Photo</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>