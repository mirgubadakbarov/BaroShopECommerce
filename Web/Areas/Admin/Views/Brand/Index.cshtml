@using Web.Areas.Admin.ViewModels.Brand;
@model BrandIndexVM;
@{
    ViewBag.Title = "Brand Dashboard";
}

<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Brand Table</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active"><a href="#" class="breadcrumb-link">Components</a></li>
                            <li class="breadcrumb-item active"><a href="#" class="breadcrumb-link">Brand</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <a asp-action="create" asp-controller="brand" asp-area="admin" class="btn btn-sm btn-outline-success col-1 d-block mb-3">Create</a>
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Photo</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var brand in Model.Brands)
                                    {
                                        <tr>
                                            <td>@brand.Id</td>
                                            <td>@brand.Title</td>
                                            <td><img style="width:120px;height:120px;object-fit:cover;" class="img img-thumbnail" src="/assets/images/@brand.PhotoName" /></td>
                                            <td>@brand.CreatedAt</td>
                                            <td>
                                                @{
                                                    if (brand.ModifiedAt.ToString() == "01.01.0001 00:00:00")
                                                    {
                                                        <p>Non Modified</p>
                                                    }
                                                    else
                                                    {
                                                        @brand.ModifiedAt
                                                    }
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group ml-auto">
                                                    <form asp-action="delete" asp-controller="brand" asp-area="admin" asp-route-id="@brand.Id">
                                                        @* <a class="btn btn-sm btn-outline-light">Info</a>*@
                                                        <a asp-action="update" asp-controller="brand" asp-area="admin" asp-route-id="@brand.Id" class="btn btn-sm btn-outline-light">Edit</a>
                                                        <button type="submit" class="btn btn-sm btn-outline-light">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Photo</th>
                                    <th>Create date</th>
                                    <th>Update date</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>