@using Web.Areas.Admin.ViewModels.Message;
@model MessageIndexVM;

@{
    ViewBag.Title = "Messages";
}
<div class="container-fluid  dashboard-content">
    <!-- ============================================================== -->
    <!-- pageheader -->
    <!-- ============================================================== -->
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Messages Table</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active"><a href="#" class="breadcrumb-link">Messages</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>FullName</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>Receieve date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var message in Model.Messages)
                                    {
                                        <tr>
                                            <td>@message.Email</td>
                                            <td style="width: 14%">
                                            @message.FullName
                                        </td>
                                        <td>@message.Subject</td>
                                        <td style="width:100%;overflow: hidden;text-align: left;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;">
                                                @message.Message
                                            </td>
                                            <td style="width: 14%;">@message.CreatedAt</td>
                                        <td>
                                            <div class="btn-group ml-auto">
                                                    <form asp-action="delete" asp-controller="message" asp-area="admin" asp-route-id="@message.Id" class="d-flex">
                                                        <a asp-action="details" asp-controller="message" asp-route-id="@message.Id" class="btn btn-sm btn-outline-light">Info</a>
                                                        <button type="submit" class="btn btn-sm btn-outline-light ml-2">
                                                            <i class="far fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Email</th>
                                    <th>FullName</th>
                                    <th>Subject</th>
                                    <th>Message</th>
                                    <th>Receieve date</th>
                                    <th>Actions</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>